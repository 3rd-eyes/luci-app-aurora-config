{
  "luci-app-aurora": {
    "description": "Grant access to Aurora theme configuration",
    "read": {
      "uci": ["aurora"],
      "ubus": {
        "luci.aurora": ["list_icons"],
        "file": ["read", "list", "stat"]
      },
      "file": {
        "/tmp/aurora_icon.tmp": ["read", "write"],
        "/www/luci-static/aurora/images/*": ["read", "list"]
      }
    },
    "write": {
      "uci": ["aurora"],
      "ubus": {
        "luci.aurora": ["upload_icon", "remove_icon"],
        "file": ["write", "remove", "exec", "stat"]
      },
      "file": {
        "/tmp/aurora_icon.tmp": ["read", "write"],
        "/www/luci-static/aurora/images/*": ["read", "write", "remove"]
      }
    }
  }
}
